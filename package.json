{
  "name": "ssss",
  "version": "1.0.0-beta1",
  "description": "Super Simple Shared Stats. A simple time-series counter aggregation/syndication library for node backed by Redis and nothing else. Ideal for keeping track of counts between several processes.",
  "main": "lib/index.js",
  "keywords": [
    "stats",
    "metrics",
    "counter",
    "aggregate",
    "cluster"
  ],
  "homepage": "http://github.com/9point6/ssss",
  "author": {
    "name": "John Sanderson",
    "email": "js@9point6.com"
  },
  "repository": {
    "type": "git",
    "url": "http://github.com/9point6/ssss.git"
  },
  "bugs": {
    "url": "http://github.com/9point6/ssss/issues"
  },
  "directories": {
    "lib": "./lib"
  },
  "scripts": {
    "test": "make test",
    "prepublish": "make build"
  },
  "dependencies": {
    "async": "~0.8.0",
    "redis": "~0.10.3"
  },
  "devDependencies": {
    "chai": "~1.9.2",
    "chai-fuzzy": "~1.4.0",
    "chai-things": "~0.2.0",
    "coffee-script": "~1.8.0",
    "gulp": "~3.8.8",
    "gulp-coffee": "~2.2.0",
    "gulp-coffeelint": "~0.4.0",
    "gulp-exit": "0.0.2",
    "gulp-jshint": "~1.8.5",
    "gulp-load-plugins": "~0.7.0",
    "gulp-mocha": "~1.1.0",
    "gulp-plumber": "~0.6.6",
    "gulp-sourcemaps": "~1.2.2",
    "gulp-util": "~3.0.1",
    "jshint-stylish": "~1.0.0",
    "mocha": "~1.21.4",
    "rimraf": "~2.2.8",
    "sinon": "~1.10.3",
    "sinon-chai": "~2.5.0",
    "source-map-support": "~0.2.7",
    "underscore": "~1.7.0"
  },
  "engines": {
    "node": ">=0.8.0"
  },
  "license": "Apache-2.0",
  "coffeelintConfig": {
    "no_tabs": {
      "level": "ignore"
    },
    "indentation": {
      "value": 1
    },
    "max_line_length": {
      "value": 120
    },
    "arrow_spacing": {
      "level": "error"
    },
    "colon_assignment_spacing": {
      "level": "error",
      "spacing": {
        "left": 0,
        "right": 1
      }
    },
    "cyclomatic_complexity": {
      "level": "warn",
      "value": 15
    },
    "line_endings": {
      "level": "error"
    },
    "no_empty_functions": {
      "level": "error"
    },
    "no_interpolation_in_single_quotes": {
      "level": "error"
    },
    "no_unnecessary_double_quotes": {
      "level": "error"
    },
    "space_operators": {
      "level": "error"
    }
  },
  "jshintConfig": {
    "bitwise": false,
    "camelcase": true,
    "curly": true,
    "eqeqeq": true,
    "forin": false,
    "freeze": false,
    "immed": true,
    "indent": 4,
    "latedef": true,
    "newcap": true,
    "noarg": true,
    "noempty": false,
    "nonbsp": true,
    "nonew": true,
    "plusplus": false,
    "quotmark": "single",
    "undef": true,
    "unused": true,
    "strict": true,
    "maxparams": 6,
    "maxdepth": 4,
    "maxstatements": 50,
    "maxcomplexity": 15,
    "maxlen": 120,
    "boss": true,
    "eqnull": true,
    "evil": true,
    "expr": true,
    "node": true
  }
}
